<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:theme="@style/AppTheme.NoActionBar">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="469dp"
        android:layout_height="214dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/titleandline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/rectangleEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rectangle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rectangleEmail"
        android:layout_alignTop="@id/rectangleEmail"
        android:layout_alignRight="@id/rectangleEmail"
        android:layout_alignBottom="@id/rectangleEmail"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:drawableLeft="@drawable/mailicon1"
        android:hint="  Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleEmail"
        app:layout_constraintEnd_toEndOf="@+id/rectangleEmail"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="@+id/rectangleEmail"
        app:layout_constraintTop_toTopOf="@+id/rectangleEmail"
        app:layout_constraintVertical_bias="0.583" />


    <ImageView
        android:id="@+id/rectanglePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/rectangle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rectanglePassword"
        android:layout_alignTop="@id/rectanglePassword"
        android:layout_alignRight="@id/rectanglePassword"
        android:layout_alignBottom="@id/rectanglePassword"
        android:background="@null"
        android:drawableLeft="@drawable/lockicon1"
        android:hint="  Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectanglePassword"
        app:layout_constraintEnd_toEndOf="@+id/rectanglePassword"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/rectanglePassword"
        app:layout_constraintTop_toTopOf="@+id/rectanglePassword" />


    <ImageView
        android:id="@+id/rectangleLogin"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/peach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rectangleLogin"
        android:layout_alignTop="@id/rectangleLogin"
        android:layout_alignRight="@id/rectangleLogin"
        android:layout_alignBottom="@id/rectangleLogin"
        android:background="@null"
        android:gravity="center"
        android:text="@string/login_text"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleLogin"
        app:layout_constraintEnd_toEndOf="@+id/rectangleLogin"
        app:layout_constraintStart_toStartOf="@+id/rectangleLogin"
        app:layout_constraintTop_toTopOf="@+id/rectangleLogin" />

    <TextView
        android:id="@+id/registerAccount"
        android:layout_width="315dp"
        android:layout_height="30dp"
        android:layout_marginTop="205dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/register_account"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.726" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

</androidx.constraintlayout.widget.ConstraintLayout>




